
@model Book 

@*This page is a partial view, it is repeatable if desired*@

@*Creates a div for the book*@
<div>

    @*uses css to change the format of the title, the price, and the add to cart button*@
    <hr class="text-decoration-line-through" />
    <div class="bg-black bg-opacity-75 p-1">
        <h3 class="text-white">@Model.Title</h3>

        <span class="badge bg-white text-black">Price: $@Model.Price</span>

        @*this form method is what is used to add books to the cart and maintain the return url*@
        <form method="post" asp-page="/Purchase">

            <input type="hidden" asp-for="@Model.BookId" />

            <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />

            <span>
                <button type="submit" class="btn btn-success btn-small float-end">Add to Cart</button>
            </span>

        </form>
    </div>

    @*Lists out the rest of the information about the book*@
    <ul class="list-unstyled">
        <li>Author: @Model.Author</li>
        <li>Publisher: @Model.Publisher</li>
        <li>Classification: @Model.Classification</li>
        <li>Category: @Model.Category</li>
        <li>Page Count: @Model.PageCount</li>
        <li>ISBN: @Model.Isbn</li>
    </ul>


</div>



