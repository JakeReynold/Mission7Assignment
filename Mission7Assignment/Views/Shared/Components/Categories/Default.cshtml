@{
}

@*passes in an enumerable object of strings*@
@model IEnumerable<string>

@*Creates a div to hold all of the links for the categories*@
<div class="d-grid gap-2">
    @*Creates a home button*@
    <a asp-controller="Home" asp-action="Index" asp-route-BookCategory="" asp-route-PageNum="1" class="btn btn-outline-secondary">
        Home
    </a>

    @*Loops through and creates a link for each category
        and highlights the page that has been selected*@
    @foreach (string c in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-BookCategory="@c" asp-route-PageNum="1"
           class="btn @(ViewBag.SelectedCategory == c ? "btn-primary" : "btn-outline-secondary")">@c</a>
    }
</div>